{
  "name": "prisma-poc-database",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "migrate": "npx prisma migrate dev",
    "start": "npx tsx index.ts",
    "testWindows": "powershell -Command \"if (Test-Path ./db/dev.db) { Remove-Item ./db/dev.db }\" && npm run migrate && npm start",
    "debug": "npx tsx index.ts",
    "debug:watch": "npx tsx --watch index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "prettier": "^3.6.2",
    "prisma": "^7.1.0",
    "tsx": "^4.20.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.1.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "dotenv": "^17.2.3"
  }
}
